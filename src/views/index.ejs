<!doctype html>
<html lang="ja">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets" type="text/css" media="screen" />
  </head>
  <body class="container">
    <header>
      <h1 class="display-4"><%= title %></h1>
    </header>
    <main>
      <table class="table">
        <thead class="thead-light">
          <% const tableHead = ["id", "車輌名", "搭乗員数", "全長（m）", "重量（ｔ）", "最高速度（km/h）", "チーム"]; %>
          <% tableHead.forEach((item) => { %>
            <th><%= item %></th>
          <% }); %>
        </thead>
        <% content.forEach((tank) => { %>
          <tr>
            <td><%= tank.id %></td>
            <td><%= tank.name %></td>
            <td><%= tank.crew %></td>
            <td><%= tank.length %></td>
            <td><%= tank.weight %></td>
            <td><%= tank.speed %></td>
            <td><%= tank.team %></td>
            <td class="border border-0">
              <a class="btn btn-outline-info brn-sm" href="/edit?id=<%= tank.id %>" role="button">✏️</a>
            </td>
            <td class="border border-0">
              <a class="btn btn-outline-danger brn-sm" href="/delete?id=<%= tank.id %>" role="button">❌</a>
            </td>
          </tr>
        <% }); %>
      </table>
      <a class="btn btn-outline-primary font-weight-bold" href="/add" role="button">＋</a>
    </main>
  </body>
</html>
